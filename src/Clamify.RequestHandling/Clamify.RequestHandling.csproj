    <Folder Include="Providers\DtoProviders\" />
    <Folder Include="Providers\Interfaces\" />
    <Folder Include="Providers\ResponseProviders\" />
    <Folder Include="Validators\Interfaces\" />
  </ItemGroup>

  <ItemGroup>
